{
  "name": "cordis",
  "description": "Meta-Framework for Modern JavaScript Applications",
  "version": "3.18.1",
  "type": "module",
  "bin": "lib/bin/cordis.mjs",
  "main": "lib/index.cjs",
  "module": "lib/index.mjs",
  "typings": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "require": "./lib/index.cjs",
      "default": "./lib/index.mjs"
    },
    "./cli": {
      "types": "./lib/cli.d.ts",
      "default": "./lib/cli.mjs"
    },
    "./group": {
      "types": "./lib/plugins/group.d.ts",
      "default": "./lib/plugins/group.mjs"
    },
    "./import": {
      "types": "./lib/plugins/import.d.ts",
      "default": "./lib/plugins/import.mjs"
    },
    "./loader": {
      "types": "./lib/plugins/loader.d.ts",
      "default": "./lib/plugins/loader.mjs"
    },
    "./worker": {
      "types": "./lib/worker/index.d.ts",
      "default": "./lib/worker/index.mjs"
    },
    "./worker/main": "./lib/worker/main.mjs",
    "./src/*": "./src/*",
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "src"
  ],
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "author": "Shigma <shigma10826@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cordiverse/cordis.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/cordiverse/cordis/issues"
  },
  "homepage": "https://github.com/cordiverse/cordis",
  "keywords": [
    "cordis",
    "effect",
    "framework"
  ],
  "cordis": {
    "exports": {
      ".": null,
      "./group": {
        "description": "Group Plugins"
      },
      "./import": {
        "description": "Import Configurations"
      }
    }
  },
  "peerDependencies": {
    "cordis": "*"
  },
  "dependencies": {
    "@cordisjs/core": "3.18.1",
    "@cordisjs/loader": "^0.13.1",
    "@cordisjs/logger": "^0.3.3",
    "@cordisjs/schema": "^0.1.1",
    "@cordisjs/timer": "^0.3.2",
    "cac": "^6.7.14",
    "cosmokit": "^1.6.3",
    "kleur": "^4.1.5",
    "reggol": "^1.7.1"
  }
}
